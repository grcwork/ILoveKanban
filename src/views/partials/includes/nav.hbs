<ul class="main-nav">

  {{#each boards}}
    <li class="main-nav-item">
      <button
        onclick="deleteBoard('{{_id}}', '{{title}}')"
        class="delete-board-btn"
      >❌</button>
      <a href="/board/{{_id}}">
        {{getFirstCharOfString title}}
      </a>
    </li>
  {{/each}}
  <li class="main-nav-item add-new-board">
    <button class="add-new-board-btn" onclick="addNewBoard()">➕</button>
  </li>
</ul>