<input
  spellcheck="false"
  type="text"
  class="board-title"
  data-board-id="{{board._id}}"
  value="{{board.title}}"
/>

<div class="board">
  <div class="todo">
    <button
      class="add-task-btn"
      onclick="addNewTask('{{board._id}}', 'todo')"
    >➕</button>
    <h3 class="card-title">Todo</h3>
    <div class="tasks-container">
      {{#each tasks}}
        {{#ifeq status "todo"}}
          <div class="task">
            <button
              class="delete-task-btn"
              onclick="deleteTask('{{_id}}')"
            >❌</button>
            <textarea
              spellcheck="false"
              class="task-description"
              data-note-id="{{_id}}"
            >{{description}}</textarea>
            <div class="task-buttons-container">
              <button
                class="mv-to-ip-btn"
                onclick="changeTaskStatus('{{_id}}', 'in progress')"
              >🚧</button>
              <button
                class="mv-to-done-btn"
                onclick="changeTaskStatus('{{_id}}', 'done')"
              >✔️</button>
            </div>
          </div>
        {{/ifeq}}
      {{/each}}
    </div>
  </div>
  <div class="in-progress">
    <button
      class="add-task-btn"
      onclick="addNewTask('{{board._id}}', 'in progress')"
    >➕</button>
    <h3 class="card-title">In progress</h3>
    <div class="tasks-container">
      {{#each tasks}}
        {{#ifeq status "in progress"}}
          <div class="task">
            <button
              class="delete-task-btn"
              onclick="deleteTask('{{_id}}')"
            >❌</button>
            <textarea
              spellcheck="false"
              class="task-description"
              data-note-id="{{_id}}"
            >{{description}}</textarea>
            <div class="task-buttons-container">
              <button
                class="mv-to-todo-btn"
                onclick="changeTaskStatus('{{_id}}', 'todo')"
              >📝</button>
              <button
                class="mv-to-done-btn"
                onclick="changeTaskStatus('{{_id}}', 'done')"
              >✔️</button>
            </div>
          </div>
        {{/ifeq}}
      {{/each}}
    </div>
  </div>
  <div class="done">
    <button
      class="add-task-btn"
      onclick="addNewTask('{{board._id}}', 'done')"
    >➕</button>
    <h3 class="card-title">Done</h3>
    <div class="tasks-container">
      {{#each tasks}}
        {{#ifeq status "done"}}
          <div class="task">
            <button
              class="delete-task-btn"
              onclick="deleteTask('{{_id}}')"
            >❌</button>
            <textarea
              spellcheck="false"
              class="task-description"
              data-note-id="{{_id}}"
            >{{description}}</textarea>
            <div class="task-buttons-container">
              <button
                class="mv-to-todo-btn"
                onclick="changeTaskStatus('{{_id}}', 'todo')"
              >📝</button>
              <button
                class="mv-to-ip-btn"
                onclick="changeTaskStatus('{{_id}}', 'in progress')"
              >🚧</button>
            </div>
          </div>
        {{/ifeq}}
      {{/each}}
    </div>
  </div>
</div>